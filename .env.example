# Credit Card Fraud Detection - Environment Variables
# ====================================================
# Copy this file to .env and customize for your environment

# Application
APP_NAME="Credit Card Fraud Detection API"
APP_VERSION="1.0.0"
DEBUG=false
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Model Configuration
MODEL_PATH=models/xgboost_model.pkl
MODEL_NAME=xgboost_fraud_detector
MODEL_VERSION=1.0.0

# Database
DATABASE_PATH=predictions.db

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=fraud-detection

# Drift Detection
DRIFT_BASELINE_PATH=models/drift_baseline.json
DRIFT_CHECK_INTERVAL=3600
DRIFT_THRESHOLD_PSI=0.2
DRIFT_THRESHOLD_KS=0.1

# Traffic Simulator
SIMULATION_INTERVAL_MIN=5
SIMULATION_INTERVAL_MAX=30
FRAUD_RATE=0.02

# Grafana (for Docker Compose)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=frauddetection

# Developer Info (shown in API docs)
DEVELOPER_NAME="Taha Bilder"
DEVELOPER_EMAIL=tahabilderanik@gmail.com
DEVELOPER_LINKEDIN=https://www.linkedin.com/in/tahabilder/
